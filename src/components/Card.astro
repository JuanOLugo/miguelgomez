---
interface Props {
    title: string;
}

const { title} = Astro.props
---

<div class=" light:bg-[#1B1B1B] dark:bg-[#1B1B1B] mb-5  px-7 py-5 rounded-lg ">
    <div class="flex ">
            <div class="mr-2">
                <slot name="icon"/>
            </div>
        <h1 class="font-bold text-3xl ">{title}</h1>
    </div>
    <slot name="description" />

</div>